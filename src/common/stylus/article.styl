@import "~common/stylus/variable.styl"
>>>.article_style
  font-size: 1.4rem
  font-family: Georgia
  color: $color-black
  word-wrap: break-word
  word-break: break-all
  letter-spacing: 0.05rem
  blockquote,pre,p
    margin: 0
    padding: 0

  h1,h2,h3,h4,h5,h6
    margin-top: 1.8em
    margin-bottom: 1.4rem

  a
    display: inline-block
    max-width: 100%
    line-height: 1.3
    color: rgba(96,126,121,0.8)
    border-bottom: 1px solid
    white-space: nowrap
    text-overflow: ellipsis
    overflow: hidden
    &:hover
      color: $color-3

  h1
    font-size: 2.5rem

  h2
    font-size: 2.2rem

  h3
    font-size: 1.9rem

  h4
    font-size: 1.6rem

  p
    line-height: 2
    margin: 1em 0
    color: $color-black
    strong
      color: #3f3f3f
      padding: 0 0.15rem
    code
      color: #555

  blockquote
    position: relative
    padding-left: 1.2rem
    padding-top: -1rem
    border-left: 0.3rem solid rgba(96,126,121,0.4)
    p
      color: #5a5a5a
      strong
        color: inherit
      code
        color: inherit

  ul
    list-style-type: square
    padding-left: 1.8rem
    margin-top: -1rem
    margin-bottom: 2rem
    li
      line-height: 2
      margin-bottom: 0.3rem
      strong
        color: #333
        padding: 0 0.15rem
      code
        color: #555


  code,pre
    font-family: Monaco, Consolas, "Courier New", monospace

  code
    background: rgba(96,126,121,0.2)
    padding: 0 0.4rem
    border-radius: 0.2rem

  pre
    background: #f1f1f1
    margin: 1.2em 0
    border-radius: 0.5rem
    box-shadow: 0 0 5px 0 #ddd
    code
      background: transparent
      padding: 0
      font-size: 1.36rem
      padding: 0 1.5rem 1.5rem
      overflow: auto
      letter-spacing: normal
    .language
      display: flex
      justify-content: flex-end
      font-size: 1.3rem
      color: $color-3
      padding: 0.8rem 0.8rem 0 0
      font-family: Georgia
    ::-webkit-scrollbar-track
      border-radius: 8px
      background-color: transparent
      box-shadow: 0 0 1px transparent inset


@media (max-width: $max-width-2)
  >>>.article_style
    blockquote
      padding-left: 0.7rem
    pre
      code
        padding: 0 1rem 1rem
      .language
        padding: 0.5rem 0.7rem 0 0
