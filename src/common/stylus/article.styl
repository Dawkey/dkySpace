@import "~common/stylus/variable.styl"
>>>.article_style
  font-size: 1.4rem
  font-family: Georgia
  color: $color-black
  word-wrap: break-word
  word-break: break-all
  letter-spacing: 0.05rem
  blockquote,pre,p
    margin: 0
    padding: 0

  h1,h2,h3,h4,h5,h6
    margin-top: 1.6em
    margin-bottom: 1.4rem

  a
    display: inline-block
    line-height: 1.3
    color: rgba(96,126,121,0.8)
    border-bottom: 1px solid
    &:hover
      color: $color-3

  h3
    font-size: 1.8rem

  p
    line-height: 2
    margin: 1em 0
    color: #2f2f2f
    strong
      color: #4f4f4f
      padding: 0 0.15rem
    code
      color: #555

  blockquote
    position: relative
    padding-left: 1.2rem
    padding-top: -1rem
    border-left: 0.3rem solid rgba(96,126,121,0.4)
    p
      color: #7a7a7a
      strong
        color: inherit
      code
        color: inherit

  ul
    list-style-type: square
    padding-left: 1.8rem
    margin-top: -1rem
    margin-bottom: 2rem
    li
      line-height: 2
      margin-bottom: 0.3rem
      strong
        color: #333
        padding: 0 0.15rem
      code
        color: #555


  code,pre
    font-family: Monaco, Consolas, "Courier New", monospace

  code
    background: rgba(96,126,121,0.2)
    padding: 0 0.4rem
    border-radius: 0.2rem

  pre
    background: #282c34
    color: #abb2b2
    padding: 1rem 1.5rem 1.5rem
    margin: 1.2em 0
    border-radius: 0.5rem
    overflow: auto
    code
      background: transparent
      padding: 0
      color: inherit
      font-size: 1.36rem
    .language
      display: flex
      justify-content: flex-end
      font-size: 1.3rem
      color: $color-3
      margin-right: -0.6rem
      margin-top: -0.4rem
      font-family: Georgia
